package kr.co.green;

import java.io.*;
import java.util.*;

import java.util.Scanner;

public class Main2 {
 
    public static void main(String[] args) throws IOException {
        // TODO Auto-generated method stub
    	Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        input.close();
        
        int[][] arr = new int[n][n];
            for(int i=0;i<n;i++)
            {
                for(int j=0;j<=i;j++)
                {
                    if(i==j)
                    {
                        arr[i][j] = 1;
                    }
                    else if(j==0)
                    {
                        arr[i][j]=1;
                    }
                }
            }
             
            for(int i=0;i<n;i++)
            {
                for(int j=0;j<=i;j++)
                {
                    if(j!=0 && j!=i)
                    {
                        arr[i][j] = arr[i-1][j-1]+arr[i-1][j];
                    }
                }
            }
             
            for(int i=n-1;i>=0;i--)
            {
                
                for(int j=i;j>=0;j--)
                {
                    System.out.print(arr[i][j]+" ");
                }
                System.out.print("\n");
            }
           
        
        
             
        
        
    }
 
}