package kr.co.green;


import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		int num = input.nextInt();
		for(int i=0;i<num;i++)
		{
			int a = input.nextInt();
			int b = input.nextInt();
			System.out.println("Case #"+(i+1)+": "+(a+b));
		}
		
		
	}

}