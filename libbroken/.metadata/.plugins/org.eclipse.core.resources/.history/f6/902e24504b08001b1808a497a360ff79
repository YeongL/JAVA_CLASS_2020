package kr.co.green;


import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		int x = input.nextInt();
		int y = input.nextInt();
		int w = input.nextInt();
		int h = input.nextInt();
		
		
		int smallest = 1000;
		if(smallest>x)
		{
			smallest = x;
		}
		if(smallest>y)
		{
			smallest = y;
		}
		if(smallest>w-x)
		{
			smallest = w-x;
		}
		if(smallest>h-y)
		{
			smallest = h-y;
		}
		System.out.println(smallest);
		
	}
	
	
	
	
	

}

